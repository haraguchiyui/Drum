<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="20dp"
    tools:context=".MainActivity">

    <android.support.v7.widget.GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="false"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="50dp"
        app:columnCount="6"
        app:rowCount="2">

        <ImageButton
            android:id="@+id/bass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:foregroundGravity="fill_vertical|center_horizontal|fill_horizontal|center|fill"
            android:onClick="bass"
            android:scaleType="fitCenter"
            app:layout_column="2"
            app:layout_columnSpan="2"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_vertical|fill_horizontal|fill"
            app:layout_row="1"
            app:layout_rowWeight="1"
            app:srcCompat="@drawable/bass" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:foregroundGravity="fill_vertical|center_horizontal|fill_horizontal|center|fill"
            android:onClick="cymbal1"
            android:scaleType="fitCenter"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_vertical|fill_horizontal|fill"
            app:layout_row="0"
            app:layout_rowWeight="1"
            app:srcCompat="@drawable/cymbal1_preview" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:foregroundGravity="fill_vertical|center_horizontal|fill_horizontal|center|fill"
            android:onClick="cymbal2"
            android:scaleType="fitCenter"
            app:layout_column="4"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_vertical|fill_horizontal|fill"
            app:layout_row="0"
            app:layout_rowWeight="1"
            app:srcCompat="@drawable/cymbal2_preview" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:foregroundGravity="fill_vertical|center_horizontal|fill_horizontal|center|fill"
            android:onClick="cymbal3"
            android:scaleType="fitCenter"
            app:layout_column="5"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_vertical|fill_horizontal|fill"
            app:layout_row="1"
            app:layout_rowWeight="1"
            app:srcCompat="@drawable/cymbal3_preview" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:foregroundGravity="fill_vertical|center_horizontal|fill_horizontal|center|fill"
            android:onClick="hihat"
            android:scaleType="fitCenter"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_vertical|fill_horizontal|fill"
            app:layout_row="1"
            app:layout_rowWeight="1"
            app:srcCompat="@drawable/hihat_preview" />

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:foregroundGravity="fill_vertical|center_horizontal|fill_horizontal|center|fill"
            android:onClick="snare"
            android:scaleType="fitCenter"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_vertical|fill_horizontal|fill"
            app:layout_row="1"
            app:layout_rowWeight="1"
            app:srcCompat="@drawable/snare_preview1" />

        <ImageButton
            android:id="@+id/imageButton7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:foregroundGravity="fill_vertical|center_horizontal|fill_horizontal|center|fill"
            android:onClick="tom1"
            android:scaleType="fitCenter"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_vertical|fill_horizontal|fill"
            app:layout_row="0"
            app:layout_rowWeight="1"
            app:srcCompat="@drawable/tom1_preview" />

        <ImageButton
            android:id="@+id/imageButton8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:foregroundGravity="fill_vertical|center_horizontal|fill_horizontal|center|fill"
            android:onClick="tom2"
            android:scaleType="fitCenter"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_vertical|fill_horizontal|fill"
            app:layout_row="0"
            app:layout_rowWeight="1"
            app:srcCompat="@drawable/tom2_preview" />

        <ImageButton
            android:id="@+id/imageButton9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:foregroundGravity="fill_vertical|center_horizontal|fill_horizontal|center|fill"
            android:onClick="tom3"
            android:scaleType="fitCenter"
            app:layout_column="4"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_vertical|fill_horizontal|fill"
            app:layout_row="1"
            app:layout_rowWeight="1"
            app:srcCompat="@drawable/tom3_preview" />

    </android.support.v7.widget.GridLayout>
</RelativeLayout>